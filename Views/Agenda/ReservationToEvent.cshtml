@model UpCycling.Models.AgendaController.ReserveEventViewModel
@{
    ViewData["Title"] = "ReservationToEvent";
}

@using UpCycling.Controllers

@using (Html.BeginForm(nameof(AgendaController.ReservationToEvent), "Agenda", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="row justify-content-center">
        <div class="card col-8">
            <div class="card-body text-center">
                <div class="card-title text-center">
                    <h2>Réserver pour l'évenement :</h2><h2 class="text-success">@Model.NomEvent</h2>
                </div>
                @Html.HiddenFor(w => w.IdEvent)
                @Html.HiddenFor(w => w.IdUser)
                <div class="card-subtitle mb-2">
                    <label> Places restantes : @Model.PlacLibre </label>
                </div>
                <input type="submit" class="btn btn-default rounded bg-dark text-white mt-2" value="Réservez" />
            </div>
        </div>
    </div>
}



